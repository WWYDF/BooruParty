generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum VoteType {
  UPVOTE
  DOWNVOTE
}

enum LayoutType {
  GRID
  COLLAGE
}

enum ThemeType {
  DARK
  LIGHT
}

enum SafetyType {
  SAFE
  SKETCHY
  UNSAFE
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  username      String    @unique
  password      String
  role          String    @default("Member")
  avatar        String?
  preferences   UserPreferences?
  favorites     UserFavorites[]
  
  lastLogin     DateTime  @default(now())
  createdAt     DateTime  @default(now())
}

model UserPreferences {
  id            String       @id
  user          User         @relation(fields: [id], references: [id])
  
  layout        LayoutType   @default(GRID)
  theme         ThemeType    @default(DARK)
}

model UserFavorites {
  id        Int      @id @default(autoincrement())
  userId    String
  postId    Int

  user      User     @relation(fields: [userId], references: [id])
  post      Posts    @relation(fields: [postId], references: [id])

  createdAt DateTime @default(now())

  @@unique([userId, postId])
}

model Posts {
  id            Int          @id @default(autoincrement())
  fileExt       String
  uploadedBy    String
  anonymous     Boolean
  safety        SafetyType
  tags          Tags[]       @relation("PostTags")
  sources       String[]
  notes         String?
  flags         String[]
  previewScale  Int?
  pHash         String?

  score         Int          @default(0)
  votes         Votes[]      @relation("PostVotes")
  comments      Comments[]   @relation("PostComments")
  favoritedBy   UserFavorites[]

  createdAt     DateTime     @default(now())
}

model Votes {
  id        Int      @id @default(autoincrement())
  postId    Int
  userId    String
  type      VoteType
  createdAt DateTime @default(now())

  post      Posts    @relation(fields: [postId], references: [id], name: "PostVotes", onDelete: Cascade)

  @@unique([postId, userId])
}

model Comments {
  id         Int       @id @default(autoincrement())
  postId     Int
  authorId   String
  content    String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  post       Posts     @relation(fields: [postId], references: [id], name: "PostComments", onDelete: Cascade)
}

model Tags {
  id             Int            @id @default(autoincrement())
  name           String         @unique
  description    String?
  
  categoryId     Int
  category       TagCategories  @relation(fields: [categoryId], references: [id])
  
  aliases        TagAlias[]
  posts          Posts[]         @relation("PostTags")

  implications   Tags[]        @relation("TagImplies")
  impliedBy      Tags[]        @relation("TagImplies")

  suggestions    Tags[]        @relation("TagSuggestions")
  suggestedBy    Tags[]        @relation("TagSuggestions")

  createdAt      DateTime      @default(now())
}

model TagAlias {
  id      Int    @id @default(autoincrement())
  alias   String @unique
  tagId   Int
  tag     Tags   @relation(fields: [tagId], references: [id])
}

model TagCategories {
  id         Int          @id @default(autoincrement())
  name       String
  color      String
  order      Int?
  tags       Tags[]

  updatedAt  DateTime     @updatedAt
}